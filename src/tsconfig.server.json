{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/server",
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es2015",
    "types": [
      "node",
      "express",
      "jest"
    ]
  },
  "include": [
    "app/server/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "app/server/server.module#AppServerModule"
  }
}
